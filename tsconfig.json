{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",                     
    "lib": ["ES6"],                                  
    "rootDir": "./src",                            
    "outDir": "./dist",
    "removeComments": true,                     
  
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                            
   
    "moduleResolution": "Node",
    "esModuleInterop": true,                       
    "resolveJsonModule": true,
    "experimentalDecorators": true,             
    "emitDecoratorMetadata": true,              
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true,      
    "baseUrl": ".",
    "paths": {

    }
  }
}
